<%= simple_form_for(@service) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.input :name %>
    <%= f.association :services_group %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
