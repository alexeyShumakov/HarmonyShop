<%= simple_form_for([:admin, @products_color, @admin_image], multipart: true) do |f| %>
  <%= f.error_notification %>

  <%= image_tag @admin_image.photo(:thumb) %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
