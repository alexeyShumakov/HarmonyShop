<%= simple_form_for @admin_product, :wrapper => :vertical_form do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :price %>
    <%= f.input :article %>
    <%= f.input :description %>
    <%= f.association :colors, as: :check_boxes %>
    <%= f.association :size_helper %>
    <%= f.label "Category:" %>
    <%= f.select :leaf_category_id,nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
