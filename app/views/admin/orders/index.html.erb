<h1>Listing Admin Orders</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>status</th>
      <th>user</th>
      <th>address</th>
      <th>city</th>
      <th>phone</th>
      <th>pay type</th>
      <th>price</th>
      <th>delivery price</th>
      <th>status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_orders.each do |admin_order| %>
      <tr>
        <td><%= admin_order.id %></td>
        <td><%= admin_order.status %></td>
        <td>
          <%= admin_order.user.name %>
          <%= link_to admin_order.user.email, admin_user_path(admin_order.user) %>
        </td>
        <td><%= admin_order.address %></td>
        <td><%= admin_order.city %></td>
        <td><%= admin_order.phone %></td>
        <td><%= admin_order.pay_type%></td>
        <td><%= admin_order.total_price %></td>
        <td><%= admin_order.delivery_price %></td>
        <td>status</td>
        <td><%= link_to 'Show', admin_order_path(admin_order) %></td>
        <td><%= link_to 'Edit', edit_admin_order_path(admin_order) %></td>
        <td><%= link_to 'Destroy', admin_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_admin_order_path %>
