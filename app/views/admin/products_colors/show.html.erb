<p>
  <strong>color:</strong>
  <%= @admin_products_color.color.name %>
</p>
<p>
  <strong>code:</strong>
  <%= @admin_products_color.color.code%>
</p>
<ul class="list-group">
  <li class="list-group-item list-group-item-info">
    Images <%= link_to 'Add image', new_admin_products_color_image_path(@admin_products_color) %>
  </li>

  <% @admin_products_color.images.each do |img| %>
    <li class="list-group-item">
      <%= image_tag img.photo(:small) %>
      <%= img.name %> <%= link_to 'Edit', edit_admin_products_color_image_path(@admin_products_color, img) %>
      <%= link_to 'Delete', admin_products_color_image_path(@admin_products_color, img),
                  method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
<%= link_to 'Edit', edit_admin_products_color_path(@admin_products_color) %> |
<%= link_to 'Back', admin_products_colors_path %>
