<p id="notice"><%= notice %></p>

<h1>Listing Size Helpers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @size_helpers.each do |size_helper| %>
      <tr>
        <td><%= size_helper.title %></td>
        <td><%= size_helper.body %></td>
        <td><%= link_to 'Show', size_helper %></td>
        <td><%= link_to 'Edit', edit_size_helper_path(size_helper) %></td>
        <td><%= link_to 'Destroy', size_helper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

