<!DOCTYPE html>
<html>
<head>
  <title>HarmonyShop</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body>

<div id="page">

  <div id="header">
    <div id="logo">
      <%= link_to root_path do %>
        <%= image_tag("logo.png", alt: "harmony") %>
      <% end %>
    </div>

    <div id="search-block">
      <%= form_tag search_path, method: :get do %>
        <%= search_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
      <% end %>
    </div>

    <div id="nav-bar">
      <nav>
        <ul>
          <%= render "categories/top_menu" %>
        </ul>
      </nav>
    </div>

    <div id="basket-block">
      <ul>
        <li><a href="">Войти</a></li> |
        <li><a href="">Зарегестрироваться</a></li>
      </ul>
      <div id="cart">
        <%= link_to cart_custom_show_path do %>
          <i class="icon bag"> </i>
          <strong>Моя корзина</strong>
        <% end %>
      </div>
      <div id="goods">
        <span class="counter">
          <%= @cart.total_quantity %> шт.
        </span>
        |
        <span class="total">
          <%= rus_number_to_currency(@cart.total_price) %>
        </span>

      </div>
    </div>
    <br/>

    <div id="banner">
        <%= image_tag 'banner.png' %>
    </div>
  </div>


  <div id="content" class="<%= controller.controller_name  %>">
    <%= yield %>
  </div>
</div>

<div class="footer-wrapper">
  <div class="footer">
    <ul class="footer-nav">
      <% @services_groups.each do |group|%>
        <li class="<%= group.name %>">
          <h5><%= group.title %></h5>
          <ul class="services">
            <% group.services.each do |service| %>
              <li><%= link_to service.title, service %></li>
            <% end %>
          </ul>
        </li>

      <% end %>
      <li>
        <div class="subscribe">
          подписаться
        </div>
      </li>
      <li class="fix"></li>
    </ul>
    <div class="fix"></div>
    <ul class="social">
      <li class="head">Следуй за нами</li>
      <li>V</li>
      <li>t</li>
      <li>f</li>
      <li>y</li>
    </ul>
    <div class="fix"></div>
  </div>
</div>
<div class="go-top"></div>

</body>
</html>
