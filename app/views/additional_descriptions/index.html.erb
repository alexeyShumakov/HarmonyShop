<p id="notice"><%= notice %></p>

<h1>Listing Additional Descriptions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @additional_descriptions.each do |additional_description| %>
      <tr>
        <td><%= additional_description.name %></td>
        <td><%= additional_description.description %></td>
        <td><%= additional_description.product %></td>
        <td><%= link_to 'Show', additional_description %></td>
        <td><%= link_to 'Edit', edit_additional_description_path(additional_description) %></td>
        <td><%= link_to 'Destroy', additional_description, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Additional description', new_product_additional_description_path(product_id: @product) %>
