<p id="notice"><%= notice %></p>

<h1>Listing Products Colors</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products_colors.each do |products_color| %>
      <tr>
        <td><%= products_color.product %></td>
        <td><%= products_color.color %></td>
        <td><%= link_to 'Show', products_color %></td>
        <td><%= link_to 'Edit', edit_products_color_path(products_color) %></td>
        <td><%= link_to 'Destroy', products_color, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

